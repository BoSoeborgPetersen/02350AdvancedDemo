<Application x:Class="_02350AdvancedDemo.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Model="clr-namespace:_02350AdvancedDemo.Model;assembly=02350AdvancedDemo.Model"
             xmlns:View="clr-namespace:_02350AdvancedDemo.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ShinyBlue.xaml"/>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type Model:Circle}">
                        <Canvas>
                            <View:CircleUserControl/>
                        </Canvas>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type Model:Square}">
                        <Canvas>
                            <View:SquareUserControl/>
                        </Canvas>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type Model:Line}">
                        <Canvas>
                            <View:LineUserControl/>
                        </Canvas>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
